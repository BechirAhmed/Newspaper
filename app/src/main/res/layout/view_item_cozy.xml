<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_2"
        app:cardCornerRadius="@dimen/item_corner_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thumbnail_cozy"
                app:placeholderImage="@drawable/thumbnail_placeholder" />
            <TextView
                android:id="@+id/title"
                android:layout_marginTop="@dimen/space_3"
                android:layout_marginBottom="@dimen/space_2"
                tools:text="明年1月1日香港標準時間將撥慢1秒"
                style="@style/Cozy.Title" />
            <TextView
                android:id="@+id/description"
                android:layout_marginTop="@dimen/space_2"
                android:layout_marginBottom="@dimen/space_2"
                tools:text="馮志才表示對方頭髮比自己長、圓面、不記得對方面部有否暗瘡等。辯方大律師李柱銘質疑他望着李峰琦一段時間，但不留意對方的面部。"
                style="@style/Cozy.Description" />
            <TextView
                android:id="@+id/source"
                android:layout_marginTop="@dimen/space_2"
                tools:text="香港電台-港聞"
                style="@style/Cozy.Source" />
            <TextView
                android:id="@+id/publishDate"
                android:layout_marginBottom="@dimen/space_3"
                tools:text="3 hours ago"
                style="@style/Cozy.PublishDate" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
