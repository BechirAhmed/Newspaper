<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_3"
        app:cardCornerRadius="@dimen/item_corner_radius_cozy"
        app:cardBackgroundColor="?attr/cardBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.github.ayltai.newspaper.widget.FaceCenteredImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thumbnail_cozy"
                android:background="@drawable/thumbnail_placeholder"
                app:initScaleType="centerCrop" />
            <TextView
                android:id="@+id/title"
                android:layout_marginTop="@dimen/space_4"
                android:layout_marginBottom="@dimen/space_3"
                style="@style/Cozy.Title" />
            <TextView
                android:id="@+id/description"
                android:layout_marginTop="@dimen/space_3"
                android:layout_marginBottom="@dimen/space_3"
                style="@style/Cozy.Description" />
            <TextView
                android:id="@+id/source"
                android:layout_marginTop="@dimen/space_3"
                style="@style/Cozy.Source" />
            <TextView
                android:id="@+id/publishDate"
                android:layout_marginBottom="@dimen/space_4"
                style="@style/Cozy.PublishDate" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
