<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/swipeMenuBackground"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/bookmark"
        android:layout_width="@dimen/swipe_menu_item_width"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_2"
        android:scaleType="fitCenter"
        android:contentDescription="@string/action_bookmark"
        app:srcCompat="@drawable/ic_bookmark_border_white_24px" />
    <ImageView
        android:id="@+id/share"
        android:layout_width="@dimen/swipe_menu_item_width"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_2"
        android:scaleType="fitCenter"
        android:contentDescription="@string/action_share"
        app:srcCompat="@drawable/ic_share_white_24px" />
</LinearLayout>
